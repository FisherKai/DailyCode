{
    "manifest_version": 2,
    "name": "YKdemo",
    "version": "1.0.0",
    "description": "yukai 的测试插件",
    "icons":
    {
        "16":"img/icon.png"
    },
    "background":
	{
		"page": "html/background.html"
	},
    "browser_action": 
	{
		"default_icon": "img/icon.png",
        "default_title": "这是一个示例Chrome插件",
        "default_popup": "html/popup.html"
    },
    "content_scripts": 
	[
		{
            "matches": ["<all_urls>"],
            "js": ["js/index.js"]
		}
    ],
	"permissions":
    [

    ]
}